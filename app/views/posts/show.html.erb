<h1><%= @post.title %></h1>
<p><%= @post.content %></p>
<p>Posted by: <%= @post.user.name %></p>

<h3>Comments</h3>
<% @post.comments.each do |comment| %>
  <p><%= comment.content %></p>
<% end %>

<h4>Add a comment:</h4>
<%= form_with(model: [ @post, @post.comments.build ], local: true) do |form| %>
  <div>
    <%= form.label :content, "Your Comment" %>
    <%= form.text_area :content %>
  </div>
  <div>
    <%= form.submit "Post Comment" %>
  </div>
<% end %>
