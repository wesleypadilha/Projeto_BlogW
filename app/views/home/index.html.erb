<!-- app/views/home/index.html.erb -->
<h1>Welcome to our blog!</h1>

<% if signed_in? %>
  <%= button_to "Log out", sign_out_path, method: :delete, class: 'button is-primary' %>
<% else %>
  <h2>Login</h2>
  <%= form_for User.new, url: session_path do |f| %>
    <%= f.email_field :email, placeholder: "Email" %>
    <%= f.password_field :password, placeholder: "Password" %>
    <%= f.submit "Log in", class: 'button is-primary' %>
  <% end %>

  <h2>Sign Up</h2>
  <%= form_for User.new, url: sign_up_path do |f| %>
    <%= f.email_field :email, placeholder: "Email" %>
    <%= f.password_field :password, placeholder: "Password" %>
    <%= f.submit "Sign up", class: 'button is-primary' %>
  <% end %>

  <%= link_to "Forgot password?", new_password_path, class: 'button' %>
<% end %>
